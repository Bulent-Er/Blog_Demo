<div class="container mt-5">
  <div class="row">
    <div class="col-3">
    <%= image_tag(@user.avatar, class:"rounded-circle", style:"width:200px; height:200px; border-radius-100%;") if @user.avatar.attached? %>
    </div>
    <div class="col-8">
      <h1><%= @user.full_name%></h1>
      <%= @user.email %> <br>
      <%= pluralize(@user.comments.size, "Comment") %> |
      <%= pluralize(@user.views, "View") %> |
      <%= pluralize(@total_views, "Total Post View") %>
    </div>
  </div>
  <div class="row">
    <div class="col-1">

    </div>
      <div class="col-10">
        <% @posts.each do |post| %>
          <div class="card mt-3">
            <div class="card-body">
              <h5 class="card-title"><%= post.title %></h5>
              <p class="card-text"><%= post.body.to_plain_text.truncate_words(100) %></p>
              <p class="card-text"><%= post.user.full_name %></p>
              <p class="card-text"><%= "#{time_ago_in_words(post.created_at)} ago" %></p>
              <a href="<%= post_path(post) %>" class="btn btn-primary">Read More</a>
            </div>
          </div>
        <% end %>
      </div>  
    
    </div>
    <div class="col-1">
        
    </div>
  </div>
</div>