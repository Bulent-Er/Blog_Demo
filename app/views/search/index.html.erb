<h1 class= "text-center"> <%= pluralize(@posts.count, "Result")%> </h1>
<div class="container">
  <table class="table table-dark table-striped">
    <thead>
      <tr>
        <th scope="col"> <%= sort_link(@query, :title, "Title", default_order: :desc) %></th>
        <th scope="col"> <%= sort_link(@query, :category_name, "Category") %></th>
        <th scope="col"> <%= sort_link(@query, :content_body, "Content Body")%></th>
        <th scope="col"> <%= sort_link(@query, :user_first_name, "Created By") %></th>
        <th scope="col"> <%= sort_link(@query, :created_at) %></th>
        <th scope="col"> <%= sort_link(@query, :updated_at) %></th>
      </tr>
    </thead>
    <body>
      <% @posts.each do |post| %>
        <tr>
          <td> <%= link_to post.title.truncate_words(5), post %> </td>
          <td> <%= link_to post.category.name, post.category %> </td>
          <td> <%= post.body.to_plain_text.truncate_words(10) %> </td>
          <td> <%= link_to post.user.full_name, post.user %> </td>
          <td> <%= post.created_at.strftime("%Y-%b-%d %H:%M:%S") %> </td>
          <td> <%= post.updated_at.strftime("%Y-%m-%d") %> </td>
        </tr>
      <% end %>
    </body>
  </table>

</div>