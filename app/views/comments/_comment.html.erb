<div class="comment-<%= comment.id %> container" style=" border: 1px solid black; padding: 1em; margin: 1em">
  <%= comment.user.name %><br />
  <span>
    Posted  <%= time_ago_in_words(comment.created_at) %>
  </span>
  <% if current_user == comment.user %>
    <div class="d-flex justify-content-end">
      <%= link_to "Edit", edit_post_comment_path(post, comment), class: "btn btn-warning me-3" %>
      <%= button_to "Delete", post_comment_path(post, comment), method: :delete, class: "btn btn-danger", data: { confirm: "Are you sure you want to delete this comment?" } %>
    </div>
  <% end %>
  <hr />
  <%= comment.body %>
</div>